{
  "name": "homeschool-hub",
  "version": "1.6.1",
  "description": "A cross-platform homeschool learning management application",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "homeschool",
    "education",
    "learning",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "edge-tts-universal": "^1.3.3",
    "electron-updater": "^6.1.7",
    "phaser": "^3.90.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.20.0",
    "uuid": "^13.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.homeschoolhub.app",
    "productName": "Homeschool Hub",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/edge-tts-universal/**/*"
    ],
    "asar": true,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/web/icons/Icon-512.png",
      "publisherName": "Homeschool Hub"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/web/icons/Icon-512.png",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/web/icons/Icon-512.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hadefuwa",
        "repo": "homeschool-hub",
        "private": false
      }
    ]
  }
}
